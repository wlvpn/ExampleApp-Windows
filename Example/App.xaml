<Application
    x:Class="Example.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvt="clr-namespace:Example.Converters"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/MiscStyles.xaml" />
                <ResourceDictionary Source="ApiAccessData.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <cnvt:ConfigurableBooleanToVisibilityConverter
                x:Key="BooleanToVisibilityConverter"
                WhenFalse="Collapsed"
                WhenTrue="Visible" />
            <cnvt:ConfigurableBooleanToVisibilityConverter
                x:Key="NegativeBooleanToVisibilityConverter"
                WhenFalse="Visible"
                WhenTrue="Hidden" />
            <cnvt:BoolToColorConverter
                x:Key="BoolToColorConverter"
                FalseBrush="Gray"
                TrueBrush="White" />
            <cnvt:BooleanInverseConverter
                x:Key="BooleanInverseConverter"/>
            <cnvt:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
